<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".techarea$PlaceholderFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="400dp"
       android:gravity="center"
       android:padding="20dp"
       android:orientation="vertical">
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@drawable/androiddev"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Mobile Aplikasi Android"
           android:padding="20dp"
           android:textColor="#fff"
           />
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@drawable/webdev"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sistem Informasi dan Pengembangan WEB"
           android:padding="20dp"
           android:textColor="#fff"
           />
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@drawable/sistemsoftware"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sistem Software Terintegrasi"
           android:padding="20dp"
           android:textColor="#fff"
           />

   </LinearLayout>


</android.support.constraint.ConstraintLayout>